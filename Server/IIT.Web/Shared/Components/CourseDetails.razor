


<div class="card">
    @if (course == null)
    {
        <h1>Loading</h1>
    }
    else
    {
        <div class="card-header">
            <h3>@course.CourseId</h3>
        </div>
        <div class="card-body">
            <form asp-action="Update">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="form-group col-6">
                        <label asp-for="CourseName" class="control-label"></label>
                        <input @bind="course.CourseName" class="form-control" />
                        <span asp-validation-for="CourseName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label asp-for="CourseCredit" class="control-label"></label>
                        <input @bind="course.CourseCredit" class="form-control" />
                        <span asp-validation-for="CourseCredit" class="text-danger"></span>
                    </div>
                </div>
                <input type="submit" value="Update"
                       class="btn btn-outline-primary" />
            </form>
        </div>
    }
</div>

@code
{
    private Course course;
    protected override async Task OnInitializedAsync()
    {
        
    }


}


