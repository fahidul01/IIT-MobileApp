@model List<Batch>
@{
    ViewData["Title"] = "Index";
    var page = (int)(ViewData["CurrentPage"] ?? 1);
    int totalPage = (int)(ViewData["TotalPage"] ?? 1);
}
<div class="row card p-2">
    <div class="col-12">
        <h1 class="d-inline">Current Batches</h1>
        <a class="btn btn-info d-inline float-right" asp-action="Create">Create</a>
    </div>
    <table class="table mt-3 table-hover table-striped">
        <thead class="thead-light">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Starts On</th>
                <th scope="col">Number of semesters</th>
                <th scope="col">Semester Duration (months)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr onclick="location.href = '@(Url.Action("Details", "Batch", new { id = item.Id }))'">
                    <td> @item.Name</td>
                    <td>@item.StartsOn.ToString("dd MMMM, yyyy")</td>
                    <td>@item.NumberOfSemester</td>
                    <td>@item.SemesterDuration</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class=" mt-5">
    <ul class="float-right d-inline pagination">
        @for (var i = 1; i <= totalPage; i++)
        {
            <li class="page-item @(i == page ? "active" : "")">
                <a asp-page="/pagination" asp-route-currentpage="@i" class="page-link">@i</a>
            </li>
        }
    </ul>
</div>
