@model List<Batch>
@{
    ViewData["Title"] = "Index";
    var page = (int)(ViewData["CurrentPage"] ?? 1);
    int totalPage = (int)(ViewData["TotalPage"] ?? 1);
}
<div class="row">
    <div class="col-10">
        <h1>Current Batches</h1>
    </div>
    <div class="col-2">
        <a class="btn btn-info d-inline float-right" asp-action="Create">Create</a>
    </div>
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Starts On</th>
                <th scope="col">Number of semesters</th>
                <th scope="col">Semester Duration (months)</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.StartsOn.ToString("dd MMMM, yyyy")</td>
                    <td>@item.NumberOfSemester</td>
                    <td>@item.SemesterDuration</td>
                    <td class="text-right">
                        <div class="dropdown">
                            <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-ellipsis-v"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                <a class="dropdown-item" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                                <a class="dropdown-item">Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="float-right mt-5">
        <ul class="pagination">
            @for (var i = 1; i <= totalPage; i++)
            {
                <li class="page-item @(i == page ? "active" : "")">
                    <a asp-page="/pagination" asp-route-currentpage="@i" class="page-link">@i</a>
                </li>
            }
        </ul>
    </div>
   
</div>
