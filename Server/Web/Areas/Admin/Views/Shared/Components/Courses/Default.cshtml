@using Web.Areas.Admin.ViewModels
@model Semester
@foreach (var course in Model.Courses)
{
    <a asp-controller="Course"
       class="p-2 col-lg-3 col-md-4 col-sm-6 btn btn-secondary"
       asp-action="Edit"
       asp-route-id="@course.Id">
        @Html.Identicon(course.CourseName, 50)
        <h4>@course.CourseId</h4>
        @course.CourseName
    </a>
}
